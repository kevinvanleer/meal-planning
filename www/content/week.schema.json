{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["startDate", "endDate", "meals", "recipes", "groceryList"],
  "properties": {
    "startDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "endDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "meals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["day", "meal", "style"],
        "properties": {
          "day": { "type": "string" },
          "meal": { "type": "string" },
          "style": { "type": "string" }
        }
      }
    },
    "recipes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["day", "name", "ingredients", "instructions"],
        "properties": {
          "day": { "type": "string" },
          "name": { "type": "string" },
          "ingredients": { "type": "array", "items": { "type": "string" } },
          "instructions": { "type": "string" }
        }
      }
    },
    "groceryList": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["item", "days"],
          "properties": {
            "item": { "type": "string" },
            "days": { "type": "string" }
          }
        }
      }
    }
  }
}
